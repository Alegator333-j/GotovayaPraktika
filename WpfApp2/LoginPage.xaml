<Page x:Class="WpfApp2.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Label Margin="0,80,0,0"  Content="Введите логин" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Top" Width="180"></Label>
        <TextBox Margin="0,120,0,0" x:Name="TextBoxName" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180" Height="30"></TextBox>
        <Label Margin="0,145,0,0" Content="Введите пароль" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Width="180"></Label>
        <PasswordBox x:Name="PassBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="180" Height="30" Margin="0,182,0,0"/>
        <Button Margin="0,230,0,0" Content="Войти" Click="Button_Click_1" HorizontalAlignment="Center"  VerticalAlignment="Top"></Button>
        <Button Margin="0,275,0,0"  Content="Просмотреть туры" Click="Button_Click" HorizontalAlignment="Center"  VerticalAlignment="Top"></Button>
    </Grid>
</Page>
